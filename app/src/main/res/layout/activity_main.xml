<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/brown_600"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/azeaz"
                android:layout_width="132dp"
                android:layout_height="56dp"
                android:gravity="center"
                android:text="@string/foresight"
                android:textColor="@color/white" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/floatingActionButton"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:backgroundTint="@color/brown_200"
                android:clickable="true"
                android:focusable="true"
                android:onClick="logout"
                app:srcCompat="@android:drawable/stat_notify_sync"
                tools:ignore="ContentDescription,OnClick,SpeakableTextPresentCheck,SpeakableTextPresentCheck,ImageContrastCheck" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/programme_du_jour"
                android:textColor="#DD2C00" />
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>